import sys  # sysモジュールをインポート

# コマンドライン引数を取得（最初の引数はスクリプト名なので除外）
numbers = list(map(float, sys.argv[1:]))

# 入力の長さをチェック
if len(numbers) < 2:
    print("エラー: 少なくとも2つの数値が必要です")
    sys.exit(1)

# 四則演算
print("加算の結果: ", sum(numbers))
print("減算の結果: ", numbers[0] - sum(numbers[1:]))

# 乗算の結果を計算
product = 1
for number in numbers:
    product *= number
print("乗算の結果: ", product)

# 0が含まれていない場合のみ除算を行う
if 0 not in numbers:
    result = numbers[0]
    for number in numbers[1:]:
        result /= number
    print("除算の結果: ", result)
else:
    print("エラー: 0で割ることはできません")

